{
  "manifest_version": 3,
  "name": "GemBrancher - Branch Gemini Conversations",
  "version": "1.0.0",
  "description": "Branch off from any point in your Gemini conversations. Create new chats that inherit the full context of your previous discussion.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "content/scraper.js",
        "content/injector.js",
        "content/restorer.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ]
}